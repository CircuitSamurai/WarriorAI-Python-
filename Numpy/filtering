import numpy as np

ages = np.array([[21, 17, 19, 20, 16, 30, 18, 65],
                 [15, 22, 18, 21, 17, 29, 19, 60]])

teenagers = ages[ages < 18]
adults = ages[(ages >= 18) & (ages < 65)]
seniors = ages[ages >= 65]
evens = ages[ages % 2 == 0]
odds = ages[ages % 2 != 0]

adults1 = np.where(ages >= 18, ages, 0)

print(adults1)
print(evens)
print(adults)
print(teenagers)
print(seniors)